{
  "expo": {
    "name": "MyCloset",
    "slug": "mycloset",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.spyduarte.mycloset",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "O MyCloset precisa acessar suas fotos para adicionar imagens dos seus itens de roupa.",
        "NSCameraUsageDescription": "O MyCloset precisa acessar sua câmera para tirar fotos dos seus itens de roupa.",
        "NSPhotoLibraryAddUsageDescription": "O MyCloset precisa salvar fotos na sua biblioteca.",
        "UIBackgroundModes": [],
        "UIRequiresFullScreen": false,
        "UIStatusBarStyle": "UIStatusBarStyleDefault"
      },
      "requireFullScreen": false,
      "userInterfaceStyle": "automatic"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.spyduarte.mycloset",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "userInterfaceStyle": "automatic"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "name": "MyCloset - Organize seu Guarda-Roupa",
      "shortName": "MyCloset",
      "lang": "pt-BR",
      "scope": "/",
      "themeColor": "#007AFF",
      "backgroundColor": "#ffffff",
      "display": "standalone",
      "startUrl": ".",
      "description": "Gerencie seu guarda-roupa digitalmente com MyCloset. Organize roupas, crie looks e acompanhe estatísticas."
    },
    "scheme": "mycloset",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "plugins": [],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "spyduarte"
  }
}
