{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Expo",
      "type": "npm",
      "script": "start",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Start iOS",
      "type": "npm",
      "script": "ios",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "dependsOn": [],
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Start Android",
      "type": "npm",
      "script": "android",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Run Tests",
      "type": "npm",
      "script": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Run Tests (Watch)",
      "type": "npm",
      "script": "test:watch",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Run Tests (Coverage)",
      "type": "shell",
      "command": "npm",
      "args": ["test", "--", "--coverage"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format Code",
      "type": "npm",
      "script": "format",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Install Dependencies",
      "type": "npm",
      "script": "install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Clean Install",
      "type": "shell",
      "command": "rm -rf node_modules package-lock.json && npm install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Clear Metro Cache",
      "type": "shell",
      "command": "npx expo start -c",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Build TypeScript",
      "type": "shell",
      "command": "npx tsc --noEmit",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Full Development Setup",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Install Dependencies",
        "Build TypeScript",
        "Lint"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Git: Commit & Push",
      "type": "shell",
      "command": "git add -A && git commit && git push",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Kill Expo/Metro",
      "type": "shell",
      "command": "killall node || true",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "osx": {
        "command": "killall node || true"
      },
      "linux": {
        "command": "killall node || true"
      },
      "windows": {
        "command": "taskkill /F /IM node.exe || exit 0"
      }
    }
  ]
}
